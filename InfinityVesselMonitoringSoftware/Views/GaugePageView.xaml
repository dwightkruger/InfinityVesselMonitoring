<UserControl
    x:Class="VesselMonitoringSuite.Views.GaugePageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VesselMonitoringSuite.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:VesselMonitoringSuite.ViewModels"
    xmlns:converters="using:InfinityGroup.VesselMonitoring.Globals.Converters"
    xmlns:gauges="using:InfinityGroup.VesselMonitoring.Gauges"
    x:Name="UserControl"
    AllowDrop="True"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:DebugConverter x:Name="DebugConverter"/>
        <vm:GaugePageViewModel x:Key="VMKey" x:Name="VM"/>
    </UserControl.Resources>
    
    <gauges:CanvasGrid 
        x:Name="MainCanvas"
        Rows="{Binding Rows, ElementName=UserControl}"
        Columns="{Binding Columns, ElementName=UserControl}"
        Width="{Binding Width, ElementName=UserControl}" 
        Height="{Binding Height, ElementName=UserControl}">
    </gauges:CanvasGrid>

</UserControl>
