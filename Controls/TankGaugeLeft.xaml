<local:TankGaugeBase
    x:Class="InfinityGroup.VesselMonitoring.Controls.TankGaugeLeft"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InfinityGroup.VesselMonitoring.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"    
    mc:Ignorable="d"
    x:Name="userControl"
    Background="Transparent">

    <Canvas>
        <Grid 
            x:Name="MainGrid" 
            Height="{x:Bind Path=GaugeHeight}" 
            Width="{x:Bind Path=GaugeWidth}"
            Canvas.Left="{x:Bind Path=Left}"  
            Canvas.Top="{x:Bind Path=Top}"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">

            <canvas:CanvasControl 
            x:Name="canvasControl" 
            ClearColor="Transparent" 
            Draw="canvasControl_Draw" 
            Loaded="canvasControl_Loaded" 
            CreateResources="canvasControl_CreateResources"/>

            <Grid 
                x:Name="DesignGrid"
                Width="{x:Bind Path=GaugeWidth}"
                Height="{x:Bind Path=GaugeHeight}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="DesignRectangle" 
                       Grid.Column="1"
                       Stroke="Red" 
                       StrokeThickness="5" 
                        RadiusX="4"
                        RadiusY="4"
                       VerticalAlignment="Stretch" 
                       HorizontalAlignment="Stretch"
                />
                <Rectangle  
                       Grid.Column="1"
                       Stroke="Red" 
                       Fill="Red"
                        RadiusX="16"
                        RadiusY="16"
                        Height="200"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Stretch"
                />
            </Grid>
        </Grid>
    </Canvas>
</local:TankGaugeBase>
